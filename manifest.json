{
  "name": "Open Sites",
  "description": "Open a default set of sites and custom ones.",
  "version": "1.2.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Sites",
    "default_icon": "icons/icon.png"
  },
  "incognito": "split",
  "permissions": [
    "storage",
    "tabs"
  ]
}